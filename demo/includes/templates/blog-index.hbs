<!DOCTYPE html>
<html lang="en">
<head>
<!-- #bbinclude "head-meta.html" -->
<!-- end bbinclude -->
    <title>Blog | Croc Studios</title>
    <meta name="description" content="{{meta.description}}" />
    <meta name="keywords" content="{{meta.keywords}}" />
    <meta name="canonical" content="{{meta.canonical}}" />

    <script type="application/ld+json">
        {
            "@context": "https://schema.org/",
            "@type": "Blog",
            "@id": "{{url}}/blog",
            "mainEntityOfPage": "{{url}}/blog",
            "name": "Blog | Croc Studios",
            "description": "{{meta.description}}",
            "publisher": {
                "@type": "Organization",
                "@id": "{{url}}",
                "name": "Croc Studios",
                "logo": {
                    "@type": "ImageObject",
                    "@id": "{{url}}/img/CS_LOGO.png",
                    "url": "{{url}}/img/CS_LOGO.png",
                    "width": "125",
                    "height": "125"
                }
            },
            "blogPost": {{{blogPostsSchema}}}
        }
        </script>
<!-- #bbinclude "head-post-scripts.html" -->
<!-- end bbinclude -->
<link rel="stylesheet" href="styles.css"></link>
</head>
<body>
<!-- #bbinclude "header.html"
    #HEADER_TITLE# = "Croc Studios"
    -->
<!-- end bbinclude -->
<main>

    <div class="container">
        <h1>Blog</h1>
        <div class="grid">
            {{#each posts}}
            <div class="card">
                <h3 class="post-title">{{title}}</h3>
                <time datetime="{{date.iso}}" class="publish-date">{{date.display}}</time>
                <p class="post-excerpt">{{meta.description}}</p>
                <a href="{{url}}" class="read-more">Read More</a>
            </div>
            {{/each}}
        </div>
    </div>

</main>
<!-- #bbinclude "footer.html" -->
<!-- end bbinclude -->

<script src="/js/app.js" type="text/javascript"></script>
</body>
</html>
